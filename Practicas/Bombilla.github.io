<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>LLMM</title>
    <style>
        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        table {
            border-collapse: collapse;
        }
    </style>
</head>

<body>
    <script>
        function cambiarluz(image) {
            var id = image.id;
            var fila = parseInt(id.split('fila')[1].split('columna')[0]);
            var columna = parseInt(id.split('columna')[1]);
            var src = image.src.endsWith('bulboff.gif') ? 'pic_bulbon.gif' : 'pic_bulboff.gif';

            image.src = src;
            var direcciones = [[-1, 0], [1, 0], [0, -1], [0, 1]]; 
            for (var i = 0; i < direcciones.length; i++) {
                var filaAdyacente = fila + direcciones[i][0];
                var columnaAdyacente = columna + direcciones[i][1];
                if (filaAdyacente >= 1 && filaAdyacente <= 3 && columnaAdyacente >= 1 && columnaAdyacente <= 3) {
                    var imgAdyacente = document.getElementById('fila' + filaAdyacente + 'columna' + columnaAdyacente);
                    if (imgAdyacente) {
                        imgAdyacente.src = imgAdyacente.src.endsWith('bulboff.gif') ? 'pic_bulbon.gif' : 'pic_bulboff.gif';
                    }
                }
            }
        }
    </script>
    <table>
        <tbody>
            <tr>
                <td><img id="fila1columna1" src="pic_bulboff.gif" onclick="cambiarluz(this)"></td>
                <td><img id="fila1columna2" src="pic_bulboff.gif" onclick="cambiarluz(this)"></td>
                <td><img id="fila1columna3" src="pic_bulboff.gif" onclick="cambiarluz(this)"></td>
            </tr>
            <tr>
                <td><img id="fila2columna1" src="pic_bulboff.gif" onclick="cambiarluz(this)"></td>
                <td><img id="fila2columna2" src="pic_bulbon.gif" onclick="cambiarluz(this)"></td>
                <td><img id="fila2columna3" src="pic_bulboff.gif" onclick="cambiarluz(this)"></td>
            </tr>
            <tr>
                <td><img id="fila3columna1" src="pic_bulboff.gif" onclick="cambiarluz(this)"></td>
                <td><img id="fila3columna2" src="pic_bulboff.gif" onclick="cambiarluz(this)"></td>
                <td><img id="fila3columna3" src="pic_bulboff.gif" onclick="cambiarluz(this)"></td>
            </tr>
        </tbody>
    </table>
</body>

</html>
