<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE test [
  <!ELEMENT test (question+)>
  <!ELEMENT question (wording,choices)>
  <!ELEMENT wording (#PCDATA)>
  <!ELEMENT choices (choice+)>
  <!ELEMENT choice (#PCDATA)>
  
  <!ATTLIST question id CDATA #REQUIRED>
  <!ATTLIST choice correct (yes|no) "no">
]>
<test>
  <question id="1">
    <wording>What does XML stand for?</wording>
    <choices>
      <choice correct="yes">eXtensible Markup Language</choice>
      <choice>eXtreme Markup Language</choice>
      <choice>eXtensible Multiple Language</choice>
      <choice>eXtra Modern Language</choice>
    </choices>
  </question>
  <question id="2">
    <wording>What is the main purpose of XML?</wording>
    <choices>
      <choice correct="yes">To store and transport data</choice>
      <choice>To replace HTML</choice>
      <choice>To create interactive web pages</choice>
      <choice>To program applications</choice>
    </choices>
  </question>
  <question id="3">
    <wording>What is a DTD in XML?</wording>
    <choices>
      <choice correct="yes">Document Type Definition</choice>
      <choice>Data Type Declaration</choice>
      <choice>Document Text Description</choice>
      <choice>Data Transfer Document</choice>
    </choices>
  </question>
  <question id="4">
    <wording>What is the function of a DTD?</wording>
    <choices>
      <choice correct="yes">To define the structure and valid elements of an XML document</choice>
      <choice>To format an XML document visually</choice>
      <choice>To compress XML documents</choice>
      <choice>To convert XML to HTML</choice>
    </choices>
  </question>
  <question id="5">
    <wording>What does PCDATA mean in XML?</wording>
    <choices>
      <choice correct="yes">Parsed Character Data</choice>
      <choice>Primary Character Data</choice>
      <choice>Processed Character Data</choice>
      <choice>Protected Character Data</choice>
    </choices>
  </question>
  <question id="6">
    <wording>What symbol is used to declare an element that can appear one or more times in DTD?</wording>
    <choices>
      <choice correct="yes">+</choice>
      <choice>*</choice>
      <choice>?</choice>
      <choice>!</choice>
    </choices>
  </question>
  <question id="7">
    <wording>What symbol is used to declare an optional element in DTD?</wording>
    <choices>
      <choice correct="yes">?</choice>
      <choice>+</choice>
      <choice>*</choice>
      <choice>^</choice>
    </choices>
  </question>
  <question id="8">
    <wording>What symbol is used to declare an element that can appear zero or more times in DTD?</wording>
    <choices>
      <choice correct="yes">*</choice>
      <choice>+</choice>
      <choice>?</choice>
      <choice>$</choice>
    </choices>
  </question>
  <question id="9">
    <wording>How do you declare a required attribute in DTD?</wording>
    <choices>
      <choice correct="yes">#REQUIRED</choice>
      <choice>#MANDATORY</choice>
      <choice>#NEEDED</choice>
      <choice>#MUST</choice>
    </choices>
  </question>
  <question id="10">
    <wording>How do you declare an optional attribute in DTD?</wording>
    <choices>
      <choice correct="yes">#IMPLIED</choice>
      <choice>#OPTIONAL</choice>
      <choice>#MAYBE</choice>
      <choice>#POSSIBLE</choice>
    </choices>
  </question>
  <question id="11">
    <wording>What does CDATA mean in XML?</wording>
    <choices>
      <choice correct="yes">Character Data</choice>
      <choice>Content Data</choice>
      <choice>Compiled Data</choice>
      <choice>Coded Data</choice>
    </choices>
  </question>
  <question id="12">
    <wording>What is the main difference between PCDATA and CDATA?</wording>
    <choices>
      <choice correct="yes">PCDATA is parsed by the XML parser, while CDATA is not</choice>
      <choice>PCDATA is for text, CDATA is for numbers</choice>
      <choice>PCDATA is for attributes, CDATA is for elements</choice>
      <choice>PCDATA is optional, CDATA is mandatory</choice>
    </choices>
  </question>
  <question id="13">
    <wording>What is an empty element in XML?</wording>
    <choices>
      <choice correct="yes">An element that has no content</choice>
      <choice>An element without attributes</choice>
      <choice>An element that is not in the DTD</choice>
      <choice>An element with null value</choice>
    </choices>
  </question>
  <question id="14">
    <wording>How do you declare an empty element in XML?</wording>
    <choices>
      <choice correct="yes">&lt;element/&gt;</choice>
      <choice>&lt;element&gt;&lt;/element&gt;</choice>
      <choice>&lt;element=null&gt;</choice>
      <choice>&lt;element empty&gt;</choice>
    </choices>
  </question>
  <question id="15">
    <wording>What is a namespace in XML?</wording>
    <choices>
      <choice correct="yes">A way to avoid name conflicts between elements</choice>
      <choice>A special type of XML element</choice>
      <choice>A method to compress XML documents</choice>
      <choice>A technique to encrypt XML data</choice>
    </choices>
  </question>
  <question id="16">
    <wording>What technology is commonly used to transform XML into HTML?</wording>
    <choices>
      <choice correct="yes">XSLT</choice>
      <choice>XPath</choice>
      <choice>XQuery</choice>
      <choice>XLink</choice>
    </choices>
  </question>
  <question id="17">
    <wording>What does DOM stand for in the context of XML?</wording>
    <choices>
      <choice correct="yes">Document Object Model</choice>
      <choice>Data Object Management</choice>
      <choice>Document Oriented Markup</choice>
      <choice>Digital Object Manipulation</choice>
    </choices>
  </question>
  <question id="18">
    <wording>What is the main advantage of using XML?</wording>
    <choices>
      <choice correct="yes">It is platform-independent and allows interoperability</choice>
      <choice>It is faster than any other data format</choice>
      <choice>It takes less space than other formats</choice>
      <choice>It requires no validation</choice>
    </choices>
  </question>
  <question id="19">
    <wording>What is an XML Schema?</wording>
    <choices>
      <choice correct="yes">An alternative to DTD that offers more functionality</choice>
      <choice>A type of XML document for databases</choice>
      <choice>A format for compressing XML</choice>
      <choice>A method for encrypting XML</choice>
    </choices>
  </question>
  <question id="20">
    <wording>What does the declaration &lt;!ELEMENT test (question+)&gt; mean in DTD?</wording>
    <choices>
      <choice correct="yes">The test element must contain one or more question elements</choice>
      <choice>The test element is optional within question</choice>
      <choice>The test element can contain any number of elements</choice>
      <choice>The test element must contain exactly one question element</choice>
    </choices>
  </question>
</test>